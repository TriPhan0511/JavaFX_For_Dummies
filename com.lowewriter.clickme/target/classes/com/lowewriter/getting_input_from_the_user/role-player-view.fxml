<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lowewriter.getting_input_from_the_user.RolePlayerController">
   <children>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Label alignment="BOTTOM_RIGHT" minWidth="100.0" text="Character's Name:" />
            <TextField fx:id="characterNameTextField" maxWidth="200.0" minWidth="200.0" promptText="Enter the character's name here" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Label alignment="BOTTOM_RIGHT" minWidth="100.0" text="Actor's Name:" />
            <TextField fx:id="actorNameTextField" maxWidth="200.0" minWidth="200.0" promptText="Enter the actor's name here" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox alignment="BOTTOM_RIGHT" layoutX="20.0" layoutY="75.0" spacing="20.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Button fx:id="okButton" minWidth="75.0" mnemonicParsing="false" onAction="#okButton_Click" text="OK" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
